<h1>haunts#new</h1>

<%= form_for(@haunt) do |f| %>
<% if @haunt.errors.any? %>
    <% @haunt.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  <% end %>

<%= f.label :name, 'Haunted Name' %>
<%= f.text_field :name %>
<br>
<%= f.label :location %>
<%= f.text_field :location %>
<br>
<%= f.label :description %>
<%= f.text_field :description %>
<br>


 <%= f.fields_for :reviews, @haunt.reviews.build do |r| %>
 <%= r.text_field :review %>
 
<%= f.submit %>
  <% end %>
  <% end %>