<%= require'pry' %>

<h1>haunts#show</h1>

<table>
  <thead>
    <tr>
    	<th>User</th>
     	<th>Title</th>
      	<th>Location</th>
      	<th>Description</th>
      	<!-- <th>Review</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <tr>
      	<td><%= @haunt.user.email %></td> 
        <td><%= @haunt.name %></td> 
        <td><%= @haunt.location %></td> 
        <td><%= @haunt.description %></td>

        <td><%= link_to 'Add A Review', new_haunt_comment_path(@haunt.id)  %></td>
  </tbody>
</table>

<br>

<p>
   Reviews:
    <% @haunt.comments.each do |comment| %>
    <%= link_to comment.user.email, user_path(comment.user) %> said
    <%= @comment.content %>

 
    <%#= binding.pry %>
  
    <% end %>


   
</p>

