<h2>Add A Review!</h2>

<h2>Haunt: <%= @haunt.name %></h2>
<p>Description:</p> 
<p><%= @haunt.description %></p>

<%= form_for [@haunt, @comment] do |f| %>
	<% if @comment.errors.any? %>
    	<% @comment.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  <% end %>
  <br>

  <%= f.label :Review %>:
  <br>
  <%= f.text_area :content, rows: 10, cols: 100, placeholder: "Write your review..." %>
  
  <br>
  <br>

  <%= f.submit %>

<% end %>