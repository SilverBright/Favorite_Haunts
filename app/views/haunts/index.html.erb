<h3>Welcome: <%= current_user.email %> </h3>

<h1>Haunt Directory</h1>

<!-- LIST OF HAUNTS IN JSON -->

<h3>AJAX RESPONSE</h3>

<p><%= link_to "See all the Haunts & Reviews!", haunts_path, class: "ajax_load_haunts" %></p>

<div class="haunts"></div>

<hr>

<h3>ORIGINAL HTML</h3>

<line></line>

<table>
  <%#= link_to 'See Haunts only in California', california_haunts_path %>
  <thead>
    <tr>
      <th>Title</th>
      <th>City</th>
      <th>State</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @haunts.each do |haunt| %>
      <tr>
        <td><%= haunt.name %></td> 
        <td><%= haunt.city %></td> 
        <td><%= haunt.state %></td> 
        <td><%= haunt.description %></td> 

        <td><%= link_to 'See Reviews', haunt_comments_path(haunt)  %></td>
        <td><%= link_to 'Add A Review', new_haunt_comment_path(haunt) %></td>

        <!-- Hide edit and destroy options from other users' haunts -->

        <% if haunt && haunt.user == current_user %>

        <td><%= link_to 'Edit', edit_haunt_path(haunt) %></td>
        <td><%= link_to 'Destroy', haunt, method: :delete, data: { confirm: 'Are you sure?! There is no going back! MWAHAHAHA!' } %></td>
        <% end %>
      </tr>
    <% end %> 
  </tbody>
</table> 







